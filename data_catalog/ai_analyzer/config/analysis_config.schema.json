{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataNavigator Analysis Config Schema",
  "type": "object",
  "required": ["table_analysis", "schema_analysis"],
  "properties": {
    "table_analysis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "method", "prompt", "output_table", "status"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "method": {
            "type": "string",
            "enum": ["ai", "sql", "openai", "algorithmic"]
          },
          "prompt": { "type": ["string", "null"] },
          "output_table": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "optional"]
          }
        },
        "additionalProperties": false
      }
    },
    "schema_analysis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "method", "prompt", "output_table", "status"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "method": {
            "type": "string",
            "enum": ["ai", "sql", "openai", "algorithmic"]
          },
          "prompt": { "type": ["string", "null"] },
          "output_table": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "optional"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}